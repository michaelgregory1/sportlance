<%= simple_form_for [@user, @booking] do |f| %>
  <%= f.input :date_start, as: :string, required: false, input_html: {class: "datepicker", id: "availabilities"} %>
  <div id="user" data-userId="<%= @user.id %>"></div>
  <div id="availabilitiesContainer">
    <%= render "bookings/availabilities_section", availabilities: @availabilities %>
  </div>
  <%= f.association :location, collection: Location.where(user: @user.id), label_method: :address, prompt: "Select location" %>
  <%= f.input :client_note, input_html: { class: "client-note" } %>
  <%= f.button :submit, "Book your lesson", class: "btn btn-primary" %>
<% end %>

