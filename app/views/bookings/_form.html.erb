<%= simple_form_for [@user, @booking] do |f| %>
  <%= f.input :date_start, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.association :location, label_method: :address %>
  <%= f.select :date_start, @availabilities.map { |a| a.date_start.strftime("%l:%M %p") + " -" + a.date_end.strftime("%l:%M %p")} %>
  <%= f.input :client_note %>
  <%= f.button :submit, "Book your lesson", class: "btn btn-primary" %>
<% end %>

