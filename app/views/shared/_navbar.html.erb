          </div>
          <div>
            <a class="button">About Us</a>
          </div>
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true""><%= image_tag('phelps', class: "avatar-medium") %></button>
