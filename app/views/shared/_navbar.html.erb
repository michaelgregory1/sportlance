    <nav class="navbar-wagon">
      <a href="/">
        <h1 class="logo">SportLance</h1>
      </a>
      <div class="button-wrap">
        <a class="button">About Us</a>
        <%= link_to("New Instructor", new_user_registration_path, method: "get", class: "button") %>
