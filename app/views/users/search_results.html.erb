<div class="container">
  <%= render 'shared/search.html.erb' %>
  <br>
  <% if @users.count == 1 %>
    <p class="results-found"><%= @users.count %> result found for "<%= @query %>"</p>
  <% end %>
  <% if @users.count > 1 %>
    <p class="results-found"><%= @users.count %> results found for "<%= @query %>"</p>
  <% end %>
  <div class="search_results_flex">
    <%= render 'shared/cards.html.erb' %>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
